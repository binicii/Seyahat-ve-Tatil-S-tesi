@using Seyahat.Models.Siniflar;
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*ADMIN PANELİ KISMI*@
<h2>Gezi Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th> ID</th>
        <th> BAŞLIK</th>
        <th> SİL</th>
        <th> GÜNCELLE</th>
        @*<th> DETAYLAR</th>*@
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <th> @x.ID</th>
    <th> @x.Baslik</th>
    <th> <a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></th>  @*SİL BUTONU KIRMIZI OLDU DANGER İLE*@
    <th><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">Güncelle </a></th> @*GUNCELLE BUTONU YESİL OLDU WARNING İLE*@
    @*<th><a href="#" class="btn btn-default">Detaylar </a></th>*@
</tr>
    }

</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Gezi </a>

