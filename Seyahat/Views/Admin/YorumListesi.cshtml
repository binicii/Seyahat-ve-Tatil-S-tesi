@using Seyahat.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumListesi</h2>
<table class="table table-bordered">
    <tr>
        <th> ID</th>
        <th> Kullanıcı</th>
        <th> Mail</th>
        <th> Yorum</th>
        <th> Gezi Adı</th>
        <th> Sil</th>
        <th> Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td> @x.ID</td>
    <td> @x.KullaniciAdi</td>
    <td> @x.Mail</td>
    <td> @x.Yorum</td>
    <td> @x.Blog.Baslik</td>  @*Blog İd yerıne id degerının baslık ısmını gosterıyoruz.*@
    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger"> Sil</a></td>  @*kırmızı buton koyduk class btn btn ile, /Admin/YorumSil/@x.ID bu kısımda yorum sil dedikten sonra benı yorumsil sayfasında bırak *@ 
    <td> <a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning"> Güncelle</a></td> @*Admın Controllerde olusturdugum kısmı cagırdım.yorumGetir*@
</tr>
    }
</table>
